 @model Alumno

<div class="alert alert-primary" role="alert">
    <h2>Creando alumno</h2>
</div>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Create">
    <div class="form-group row">
        <div class="col-md-6">
            <label for="Nombre">Nombre</label>
            <input type="text" class="form-control" asp-for="Nombre" value="@Model.Nombre" />
        </div>

        <div class="col-md-6">
            <label for="Apellidos">Apellidos</label>
            <input type="text" class="form-control" asp-for="Apellidos" value="@Model.Apellidos" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-6">
            <label for="Genero">Género</label>
            <select class="form-control" asp-for="Genero">
                <option value="">Seleccione...</option>
                <option value="Masculino">Masculino</option>
                <option value="Femenino">Femenino</option>
            </select>
        </div>

        <div class="col-md-6">
            <label for="FechaNacimiento">Fecha de Nacimiento</label>
            <input type="date" class="form-control" asp-for="FechaNacimiento" value="@Model.FechaNacimiento.ToString("yyyy-MM-dd")" />
        </div>
    </div>

    <br />

    <div class="d-flex justify-content-end">
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        <button type="submit" class="btn btn-primary lm">Guardar</button>

    </div>
</form>
