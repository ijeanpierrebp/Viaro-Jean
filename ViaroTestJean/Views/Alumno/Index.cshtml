@model List<Alumno>

@{
    ViewData["Title"] = "Alumno Page";
}
<a asp-action="Create" class="btn btn-primary">Crear</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Genero</th>
            <th>Fecha de nacimiento (dia/mes/año)</th>
            <th colspan="2">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nombre</td>
                <td>@item.Apellidos</td>
                <td>@item.Genero</td>
                <td>@item.FechaNacimiento.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-secondary">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>