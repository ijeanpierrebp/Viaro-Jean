 @model Grado

<div class="alert alert-primary" role="alert">
    <h2>Creando grado</h2>
</div>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Create">
    <div class="form-group row">
        <div class="col-md-6">
            <label for="Nombre">Nombre del Grado</label>
            <input type="text" class="form-control" asp-for="Nombre" value="@Model.Nombre" />
        </div>

        <div class="col-md-6">
            <label for="ProfesorId">Seleccionar Profesor</label>
            <select asp-for="ProfesorId" class="form-control" asp-items="@(new SelectList(ViewBag.Profesores, "Id", "Nombre"))">
            </select>
        </div>
    </div>

    <br />

    <div class="d-flex justify-content-end">
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        <button type="submit" class="btn btn-primary">Guardar</button>
    </div>
</form>
