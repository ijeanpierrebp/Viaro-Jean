@model Profesor

<div class="alert alert-secondary" role="alert">
    <h2>Editando a @Model.Nombre</h2>
</div>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Update">
    <div class="form-group row">
        <input type="hidden" asp-for="Id" />

        <div class="col-md-6">
            <label for="Nombre">Nombre</label>
            <input type="text" class="form-control" asp-for="Nombre" value="@Model.Nombre" />
        </div>

        <div class="col-md-6">
            <label for="Apellidos">Apellidos</label>
            <input type="text" class="form-control" asp-for="Apellidos" value="@Model.Apellidos" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-6">
            <label for="Genero">Género</label>
            <select class="form-control" asp-for="Genero">
                @if (Model.Genero == "Masculino")
                {
                    <option value="Masculino" selected>Masculino</option>
                    <option value="Femenino">Femenino</option>
                }
                else if (Model.Genero == "Femenino")
                {
                    <option value="Femenino" selected>Femenino</option>
                    <option value="Masculino">Masculino</option>
                }
                else
                {                   
                    <option value="Masculino">Masculino</option>
                    <option value="Femenino">Femenino</option>
                }
            </select>

        </div>
    </div>

    <br />

    <div class="d-flex justify-content-end">
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        <button type="submit" class="btn btn-primary">Guardar</button>
    </div>
</form>
